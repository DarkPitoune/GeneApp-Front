---
import NavBar from "@components/navBar.astro";
import "@fontsource/dm-serif-display";
import "@fontsource/josefin-sans";

interface Props {
  title: string;
  connected: boolean;
}

const { title, connected } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Le site de généalogie de la famille d'Hébrail"
    />
    <meta name="robots" content="noindex" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#0534a3" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://unpkg.com/pell/dist/pell.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>{title}</title>
  </head>
  <body
    class="overflow-x-clip bg-discreet-cream min-h-screen flex flex-col"
    x-data="{ menuOpen : false }"
  >
    <NavBar connected={connected} />
    <main
      hx-indicator="#spinner"
      class="grow flex flex-col items-stretch"
      x-on:touchstart="menuOpen = false"
    >
      <slot />
    </main>
    <div
      id="spinner"
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 htmx-indicator p-4 rounded-lg shadow-lg bg-white"
    >
      <div
        class="rounded-full border-4 border-gray-100 border-t-royal-blue animate-spin h-8 w-8"
      >
      </div>
    </div>
    <script is:inline src="https://unpkg.com/pell"></script>
  </body>
</html>

<style>
  #spinner {
    display: none;
    opacity: 0;
    transition: opacity 100ms ease-in;
    transition-delay: 400ms;
  }

  .htmx-request#spinner {
    display: block;
    opacity: 1;
  }
</style>
