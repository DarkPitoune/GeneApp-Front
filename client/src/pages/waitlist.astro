---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import wait from "@images/wait.png";
export const prerender = true;
---

<Layout title="Attente" connected={false}>
  <div class="flex flex-col justify-center grow gap-2 items-center">
    <h1 class="text-5xl text-center font-serif">
      Merci de votre demande d'inscription
    </h1>
    <p class="text-xl text-center">
      Veuillez attendre que Pierre valide votre compte
    </p>
    <Image src={wait} alt="Attente" class="w-52 mt-8" />
  </div>
</Layout>
