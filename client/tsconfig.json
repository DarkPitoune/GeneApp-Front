{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "lib": ["es2019", "ES2015.Promise", "ES2015.core", "ES2017.Object"],
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@pages/*": ["src/pages/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["src/images/*"]
    }
  }
}
